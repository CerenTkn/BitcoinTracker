<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cerentekin.bitcointracker.ui.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cerentekin.bitcointracker.ui.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_homeFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.cerentekin.bitcointracker.ui.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/coinDetailFragment"
        android:name="com.cerentekin.bitcointracker.ui.CoinDetailFragment"
        android:label="Coin Detail">

        <argument
            android:name="coin"
            app:argType="com.cerentekin.bitcointracker.data.model.Coin"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.cerentekin.bitcointracker.ui.FavouritesFragment"
        android:label="Favourites">

        <action
            android:id="@+id/action_favouritesFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment" />
    </fragment>




</navigation>